@model TaskManagementSystem.Web.Models.ViewModels.TaskViewModel
@{
    ViewData["Title"] = "Eliminar Tarea";
}

<div class="container py-4">
    <div class="row mb-3">
        <div class="col-12 col-md-8 mx-auto">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-danger text-white d-flex align-items-center">
                    <i class="bi bi-trash3 me-2"></i>
                    <h5 class="mb-0">Eliminar Tarea</h5>
                </div>
                <div class="card-body">
                    <div class="alert alert-warning d-flex align-items-center" role="alert">
                        <i class="bi bi-exclamation-triangle me-2"></i>
                        <div>
                            ¿Estás seguro de que deseas eliminar esta tarea? Esta acción es reversible (eliminación lógica).
                        </div>
                    </div>
                    <dl class="row mb-0">
                        <dt class="col-sm-4">Título</dt>
                        <dd class="col-sm-8">@Model.Title</dd>
                        <dt class="col-sm-4">Descripción</dt>
                        <dd class="col-sm-8">@Model.Description</dd>
                        <dt class="col-sm-4">Estado</dt>
                        <dd class="col-sm-8">
                            <span class="badge bg-@GetStatusBadge(Model.Status)">@Model.Status</span>
                        </dd>
                        <dt class="col-sm-4">Prioridad</dt>
                        <dd class="col-sm-8">
                            <span class="badge bg-@GetPriorityBadge(Model.Priority)">@Model.Priority</span>
                        </dd>
                        <dt class="col-sm-4">Fecha de vencimiento</dt>
                        <dd class="col-sm-8">
                            @(Model.DueDate.HasValue ? Model.DueDate.Value.ToString("dd/MM/yyyy") : "<span class='text-muted'>No definida</span>")
                        </dd>
                        <dt class="col-sm-4">Fecha de creación</dt>
                        <dd class="col-sm-8">@Model.CreatedAt.ToString("dd/MM/yyyy HH:mm")</dd>
                    </dl>
                </div>
                <div class="card-footer bg-light d-flex justify-content-between">
                    <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-outline-secondary">
                        <i class="bi bi-arrow-left"></i> Cancelar
                    </a>
                    <form asp-action="Delete" asp-route-id="@Model.Id" method="post" class="d-inline">
                        <button type="submit" class="btn btn-danger">
                            <i class="bi bi-trash"></i> Eliminar
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@functions {
    private string GetStatusBadge(TaskManagementSystem.Web.Models.Enums.TaskItemStatus status)
    {
        return status switch
        {
            TaskManagementSystem.Web.Models.Enums.TaskItemStatus.Pending => "warning",
            TaskManagementSystem.Web.Models.Enums.TaskItemStatus.InProgress => "info",
            TaskManagementSystem.Web.Models.Enums.TaskItemStatus.Completed => "success",
            TaskManagementSystem.Web.Models.Enums.TaskItemStatus.Cancelled => "secondary",
            _ => "light"
        };
    }
    private string GetPriorityBadge(TaskManagementSystem.Web.Models.Enums.TaskPriority priority)
    {
        return priority switch
        {
            TaskManagementSystem.Web.Models.Enums.TaskPriority.Low => "secondary",
            TaskManagementSystem.Web.Models.Enums.TaskPriority.Medium => "primary",
            TaskManagementSystem.Web.Models.Enums.TaskPriority.High => "danger",
            _ => "light"
        };
    }
}
