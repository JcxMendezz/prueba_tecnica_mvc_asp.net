@model TaskManagementSystem.Web.Models.ViewModels.TaskListViewModel
@{
    ViewData["Title"] = "Tareas";
}

<div class="container">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Lista de Tareas</h1>
        <a asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-lg"></i> Nueva Tarea
        </a>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (Model.IsEmpty)
    {
        <div class="alert alert-info">
            <p class="mb-0">No hay tareas registradas. <a asp-action="Create">Crear una nueva tarea</a>.</p>
        </div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead class="table-dark">
                    <tr>
                        <th>TÃ­tulo</th>
                        <th>Estado</th>
                        <th>Prioridad</th>
                        <th>Fecha Vencimiento</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var task in Model.Tasks)
                    {
                        <tr class="@(task.IsOverdue ? "table-danger" : "")">
                            <td>@task.Title</td>
                            <td><span class="badge @task.StatusBadgeClass">@task.StatusText</span></td>
                            <td><span class="badge @task.PriorityBadgeClass">@task.PriorityText</span></td>
                            <td>@task.DueDateFormatted</td>
                            <td>
                                <a asp-action="Details" asp-route-id="@task.Id" class="btn btn-sm btn-info">Ver</a>
                                <a asp-action="Edit" asp-route-id="@task.Id" class="btn btn-sm btn-warning">Editar</a>
                                <a asp-action="Delete" asp-route-id="@task.Id" class="btn btn-sm btn-danger">Eliminar</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <div class="row mt-3">
            <div class="col">
                <small class="text-muted">
                    Total: @Model.TotalCount |
                    Pendientes: @Model.PendingCount |
                    En Progreso: @Model.InProgressCount |
                    Completadas: @Model.CompletedCount
                </small>
            </div>
        </div>
    }
</div>
