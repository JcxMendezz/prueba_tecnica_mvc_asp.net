@*
    Partial para mostrar alertas de TempData
    Soporta: SuccessMessage, ErrorMessage, WarningMessage, InfoMessage
*@

@* Alerts Partial - Elegant Style *@

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert-elegant alert-success fade-in" role="alert" data-auto-dismiss="5000">
        <i class="bi bi-check-circle alert-icon"></i>
        <div class="alert-content">
            <div class="alert-title">¡Éxito!</div>
            <div class="alert-message">@TempData["SuccessMessage"]</div>
        </div>
        <button type="button" class="btn btn-ghost btn-sm ms-auto" data-bs-dismiss="alert" aria-label="Cerrar">
            <i class="bi bi-x-lg"></i>
        </button>
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert-elegant alert-danger fade-in" role="alert">
        <i class="bi bi-exclamation-triangle alert-icon"></i>
        <div class="alert-content">
            <div class="alert-title">Error</div>
            <div class="alert-message">@TempData["ErrorMessage"]</div>
        </div>
        <button type="button" class="btn btn-ghost btn-sm ms-auto" data-bs-dismiss="alert" aria-label="Cerrar">
            <i class="bi bi-x-lg"></i>
        </button>
    </div>
}

